<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head'); %>
</head>

<body>
    <header class="header">
        <%- include('../partials/header'); %>
    </header>
    <div class="singlepost">
        <h2>
            <%= posts.title %>
        </h2>
        <div class="content">
            <p>
                <%= posts.body %>
            </p>
        </div>
        <button id="like-button" type="button" onclick="this.disabled = true;"></button>
        <a class="delete" data-del="<%= posts.id %>">Delete post</a>
    </div>
    <script>
        const delreq = document.querySelector('a.delete');
        delreq.addEventListener('click', (e) => {
            const endpoint = `/posts/${delreq.dataset.del}`;
            fetch(endpoint, {
                method: 'DELETE',
            }).then(window.location.href = '/posts')
        });
    </script>
    <footer class="footer">
        <%- include('../partials/footer'); %>
    </footer>
</body>

</html>